<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import ledger.user_interface.ui_controllers.component.AccountDropdown?>
<?import ledger.user_interface.ui_controllers.component.ConverterDropdown?>
<?import ledger.user_interface.ui_controllers.component.FileSelectorButton?>
<?import java.net.URL?>
<fx:root fx:id="addAcctGridPane" alignment="CENTER" scaleShape="false" style="-fx-background-color: #ffffff;"
         type="GridPane" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="200.0"/>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="200.0"/>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="200.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" percentHeight="0.0" prefHeight="40.0"
                        vgrow="ALWAYS"/>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" prefHeight="30.0" vgrow="ALWAYS"/>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" prefHeight="50.0" vgrow="ALWAYS"/>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" prefHeight="60.0" vgrow="ALWAYS"/>
    </rowConstraints>
    <children>
        <Pane fx:id="header" GridPane.columnSpan="3" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER"
              GridPane.vgrow="ALWAYS">
            <children>
                <Text fx:id="title" layoutX="14.0" layoutY="30.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Bulk Import">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Text>
            </children>
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </Pane>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="File Type" GridPane.columnIndex="1"
              GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
            <font>
                <Font name="Calibri Light" size="20.0"/>
            </font>
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </Text>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Account" GridPane.columnIndex="2"
              GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
            <font>
                <Font name="Calibri Light" size="20.0"/>
            </font>
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </Text>
        <FileSelectorButton fx:id="fileSelector" maxWidth="-Infinity" prefWidth="150.0" GridPane.halignment="CENTER"
                            GridPane.rowIndex="2" GridPane.valignment="CENTER"/>
        <ConverterDropdown fx:id="converterSelector" maxWidth="-Infinity" prefWidth="150.0" GridPane.columnIndex="1"
                           GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER"/>
        <AccountDropdown fx:id="accountDropdown" maxWidth="-Infinity" prefWidth="150.0" GridPane.columnIndex="2"
                         GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER"/>
        <Button fx:id="importButton" mnemonicParsing="false" text="Import" GridPane.columnSpan="3"
                GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER">
            <font>
                <Font name="Calibri" size="22.0"/>
            </font>
            <padding>
                <Insets bottom="5.0" left="30.0" right="30.0" top="5.0"/>
            </padding>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </children>
    <stylesheets>
        <URL value="@../css/colorStyle.css"/>
    </stylesheets>
</fx:root>
