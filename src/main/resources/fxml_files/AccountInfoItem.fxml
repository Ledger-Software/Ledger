<fx:root prefHeight="20.0" prefWidth="160.0" type="GridPane" xmlns="http://javafx.com/javafx/8.0.111"
         xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="80.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <AccountBalanceLabel fx:id="accountBalance" alignment="TOP_LEFT" textAlignment="CENTER"
                             GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
        <Label fx:id="accountName" maxWidth="80.0" text="Label"/>
    </children>
</fx:root>
